package ba.bitcamp.edvin.vjezbe;

public class Zadaci7 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int day = 31;
		int month = 5;
		int year = 2015;

		if (day < 32 && month < 13) {
			System.out.println("Sutra je " + (1) + "." + month + "."+ year);
	
		} else if (day == 31 && month == 1 || month == 3 || month == 5 || month == 7 || month == 8 || month == 10) {
			System.out.println("Sutra je " + (01) + "." + (month + 1) + "."+ year);

		} else if (day < 32 && day > 30 && month == 4) {
			System.out.println("Sutra je " + day + "." + month + "." + year);
		}

	}

}
