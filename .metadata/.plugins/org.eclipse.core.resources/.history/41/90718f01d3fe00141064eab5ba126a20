package ba.bitcamp.edvin.variables;

public class Area {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("hello world");
		int a = 5;
		int b = 7;

		int multiplication = a * b;
		int plus = a + b;

		System.out.println("volume: " + plus);
		System.out.println("area: " + multiplication);

		int r = 5;
		double pi = 3.14;

		double area = r * r * pi;
		// the formula for calucating area of cicrle is r*r*pi

		System.out.println("area od circle " + area);
	}

}
